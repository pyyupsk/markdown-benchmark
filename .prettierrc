{
    "$schema": "https://json.schemastore.org/prettierrc",
    "plugins": ["prettier-plugin-pkg"],
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "overrides": [
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2,
                "endOfLine": "auto",
                "proseWrap": "always",
                "embeddedLanguageFormatting": "auto",
                "printWidth": 80
            }
        }
    ]
}
